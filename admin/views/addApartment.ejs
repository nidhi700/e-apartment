<!DOCTYPE html>
<html lang="en">
<body class="animsition">
    <%- include('sidebar'); %>
        <div class="page-container">
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-header">
                                        <strong>ADD APARTMENT</strong>                                        
                                    </div>
                                    <form class="form-header" action="/insertApartment" method="POST">
                                    <div class="card-body card-block">     
                                        <div class="form-group">
                                            <label for="company" class=" form-control-label">Apartment Name</label>
                                            <input type="text"  name="apt_name" placeholder="Enter Apartment Name" class="form-control"  pattern="[a-zA-Z]*"
                                            title="Only Characters are allowed" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="city" class=" form-control-label">Lift Count</label>
                                            <input type="text" name="lift_cnt" placeholder="Enter Lift Count" class="form-control" required
                                            pattern="[0-9]*" title="Only Number are allowed">
                                        </div>                                        
                                        <div class="form-group">
                                            <label for="city" class=" form-control-label">Floor Count</label>
                                            <input type="text" name="floor_cnt" placeholder="Enter Floor Count" class="form-control" pattern="[0-9]*" title="Only Number are allowed" required>
                                        </div>                        
                                        <div class="form-group">
                                            <label for="city" class=" form-control-label">Flat Count</label>
                                            <input type="text" name="flat_cnt" placeholder="Enter Flat Count" class="form-control" pattern="[0-9]*" title="Only Number are allowed" required>
                                        </div>                        
                                        <div class="form-group">
                                            <label for="city" class=" form-control-label">Camera Count</label>
                                            <input type="text" name="camera_cnt" placeholder="Enter Camera Count" class="form-control" pattern="[0-9]*" title="Only Number are allowed" required>
                                        </div>                                    
                                        <div class="form-actions form-group">
                                            <button type="submit" class="btn btn-primary btn-sm">Add</button>
                                        </div></form>
                                    </div>
                                    </div>
                                </div>
                            </div>                        
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Jquery JS-->
    <script src="vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="vendor/slick/slick.min.js">
    </script>
    <script src="vendor/wow/wow.min.js"></script>
    <script src="vendor/animsition/animsition.min.js"></script>
    <script src="vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="vendor/circle-progress/circle-progress.min.js"></script>
    <script src="vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="vendor/select2/select2.min.js">
    </script>

    <!-- Main JS-->
    <script src="js/main.js"></script>

</body>

</html>
