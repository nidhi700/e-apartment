                                        </div> 
                                        <div class="form-group">
                                            <label for="street" class=" form-control-label">Description</label>
                                            <input type="text" id="description" name="description" value="<%=res.Description %>" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label for="city" class=" form-control-label">Bill</label>
                                            <input type="text" id="bill" name="bill" value="<%=res.Bill%>" class="form-control">
                                        </div>    
                                        <input type="text" hidden id="sdid" name="sdid" value="<%=res.SD_ID %>" class="form-control">
