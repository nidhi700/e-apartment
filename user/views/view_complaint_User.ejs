<!DOCTYPE html>
<html lang="en">
<body class="animsition">
    <%- include('sidebar_user'); %>
        <div class="page-container">
            <div class="main-content">                
                    <div class="container-fluid">
                                <div class="table-data__tool-right" align="right">
                                    <a href="addcom"><button class="au-btn au-btn-icon au-btn--green au-btn--small">
                                        <i class="zmdi zmdi-plus"></i>add Complaints</button></a>
                                </div>

                                <br>
                                <div class="table-responsive table--no-card m-b-30">
                                    <table class="table table-borderless table-striped table-earning">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Complaints</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <%
                                            if(data.length!=0){
                                            
                                            data.forEach(function(res){
                                            %>
                                                
                                                <tr>
                                                    <td><%=res.Date %></td>
                                                        <td>
                                                            <%=res.complaint_name %>
                                                        </td>  
                                                        <td>
                                                            <!-- Edited -->
                                                            <a href="/edit_comp/<%=res.C_id%>" data-toggle="tooltip" title="Update!"><i class="fa fa-pencil" aria-hidden="true"></i></a>  
                                                            <!-- //Edited -->
                                                        </td>             
                                                </tr>                                                
                                            <%}) %>
                                            <% } else{ %>
                                                <tr>
                                                    <td>No Data Found</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
								</div>
                            </div>
                        </div>
                    </div>
               

    <!-- Jquery JS-->
    <script src="vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="vendor/slick/slick.min.js">
    </script>
    <script src="vendor/wow/wow.min.js"></script>
    <script src="vendor/animsition/animsition.min.js"></script>
    <script src="vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="vendor/circle-progress/circle-progress.min.js"></script>
    <script src="vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="vendor/select2/select2.min.js">
    </script>

    <!-- Main JS-->
    <script src="js/main.js"></script>

</body>

</html>
<!-- end document-->
